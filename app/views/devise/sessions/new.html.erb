<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-login-image">

      <div class="logo-container__login position-absolute">
        <a href="/">
          <span class="logo-text">Sports Hub</span>
        </a>
      </div>
      <%= image_tag("login.png", class:"login-img img-fluid ")%>
    </div>
    <div class="col-md-6 ">
      <div class="container p-3 text-end">
        <span class="px-3">Donâ€™t have an account?</span> <%= link_to 'Get Started', new_user_registration_path, class: "btn btn-outline-danger"%>
      </div>
      <div class="wrapper align-items-center col-login-fields-wrapper">
      <div class="row center-block">
      <h2 class="font-weight-bold" >Log in to Sports Hub</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label 'EMAIL ADDRESS', class: "text-uppercase py-2"  %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <br />
          <%= f.label 'PASSWORD', class: "text-uppercase py-2"%>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions py-3">
          <%= f.submit "Log in", class: "btn-lg btn-danger " %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

