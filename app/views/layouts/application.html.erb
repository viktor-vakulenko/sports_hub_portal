<!DOCTYPE html>
<html>
  <head>
    <title>SportHubPortal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) %>
    <%= render partial: 'shared/header' %>
  <% end %>
  <body>
  <% if current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) %>
    <%= yield %>
  <% else %>
    <div class="container-fluid">
    <div class="row">
      <div class="center-block col-md-3">
        <h1>Menu</h1>
        <ul>
          <li><%= link_to t('articles'), articles_path  %></li>
        </ul>
      </div>
      <div class="center-block col-md-9">
        <% if current_page?(edit_user_registration_path) || current_page?(edit_user_path) %>
          <%= render partial: 'shared/users_cabinet_tabs' %>
        <% end %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
    </div>
  <% end %>

  </body>
  <% unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) %>
    <%= render partial: 'shared/footer' %>
  <% end %>

</html>
